<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:background="#FFF"
    >
    <RelativeLayout
        android:id="@+id/iv_lv_lm_rl_top"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        >
        <ImageView
            android:id="@+id/iv_lv_lm_rl_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/mh1"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/tv_lv_lm_rl_title"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="center"
            android:text="我不专业，但我喜欢摄影"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:lines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tv_lv_lm_rl_par_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_lv_lm_rl_title"
            android:text="312312参与"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:textColor="#808080"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_lv_lm_rl_imgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    </LinearLayout>
</LinearLayout>