<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/home_addattention_head"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/ic_launcher" />
    <LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <TextView
            android:id="@+id/home_addattention_username"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:text="发布用户名"
             />
    <TextView
        android:id="@+id/home__addattention_like"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:text="被喜欢1000次"
        />
</LinearLayout>

        <Button
            android:id="@+id/home_addattention_dislike"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:layout_marginRight="10dp"
            android:background="@drawable/home_addattention_btn"
            android:text="不喜欢"

           />

        <Button
            android:id="@+id/home_addattention"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/home_addattention_btn"
                android:layout_marginRight="10dp"
            android:text="关注"
            />
    </LinearLayout>

    <GridView
        android:id="@+id/home_gv"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:background="#DDDDDD"
        android:numColumns="3"
        android:src="@mipmap/ic_launcher" />


</LinearLayout>
