<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/header_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/head_login"

        />
    <TextView
        android:id="@+id/text_sendmessage"
        android:layout_below="@id/header_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我们发送了验证码至"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dip"
        android:textSize="23sp"/>
    <TextView
        android:id="@+id/text_phone"
        android:layout_below="@id/text_sendmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15611770587"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dip"
        android:textSize="23sp"/>
    <EditText
        android:id="@+id/edit_num"
        android:layout_below="@id/text_phone"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@null"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>
    <TextView
        android:id="@+id/text_line"
        android:layout_below="@id/edit_num"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>
    <Button
        android:id="@+id/btn_getnum"
        android:layout_below="@id/text_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重新获取验证码"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="15sp"/>
    <Button

        android:id="@+id/btn_confirmation_next"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:background="#f2ebeb"
        android:layout_gravity="bottom"

        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>