<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="65dp">
<ImageView
    android:id="@+id/img_label"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@mipmap/ic_launcher"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="18dp"
    />
    <TextView
        android:id="@+id/text_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/img_label"
        android:text="新的粉丝"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@mipmap/ic_arrow_message"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"/>
    <oracle.mau.view.ThinLineView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_label"
        android:layout_marginTop="15dp"/>
</RelativeLayout>